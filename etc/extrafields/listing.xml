<?xml version="1.0" encoding="utf-8" ?>
<form>
	<fields name="attribs" addfieldpath="/templates/jovocleague/etc/fields">
		<fieldset
      name="extra-fields"
      label="TPL_GROUP_EXTRA_FIELDS_LABEL"
      description=""
      group="extrafields"
    >
			<field
        name="type-article"
        type="hidden"
        default="view-listing"
        label="TPL_LISTING_INFO_LABEL"
      />

			<field
        name="spacer"
        type="spacer"
        label="TPL_LISTING_INFO"
        class="text-label"
      />

<!-- 			<field name="open-time" type="DateTime" label="TPL_TIME_OPEN" description="TPL_TIME_OPEN_DESC" size="40" filter="RAW" hint="10:00 AM"/>

			<field name="close-time" type="DateTime" label="TPL_TIME_CLOSE" description="TPL_TIME_CLOSE_DESC" size="40" filter="RAW" hint="11:00 PM"/> -->

			<field
        name="phone"
        type="text"
        label="TPL_PHONE"
        description="TPL_PHONE_DESC"
        size="40"
        filter="RAW"
      />

			<field
        name="mail"
        type="text"
        label="TPL_EMAIL"
        description="TPL_EMAIL_DESC"
        size="40"
        filter="RAW"
      />

			<field
        name="website"
        type="text"
        label="TPL_WEBSITE"
        description="TPL_WEBSITE_DESC"
        size="40"
        filter="RAW"
        hint="https://www.domain.com"
      />

			<field
        name="link-contact"
        type="text"
        label="TPL_CONTACT_US"
        description="TPL_CONTACT_US_DESC"
        size="40"
        filter="RAW"
      />

			<!-- LOCATION GALLERY -->
			<field
        name="spacer1"
        type="spacer"
        label="TPL_LISTING_GALLERY_LABEL"
        class="text-label"
      />

			<field
        name="listing-gallery"
        type="subform"
        label="TPL_LISTING_OPTIONS"
        description="TPL_LISTING_OPTIONS_DESC"
        layout="joomla.form.field.subform.repeatable-table"
        icon="list"
        multiple="true"
        class="no-row"
      >
				<form hidden="true" name="list-info-listing" repeat="true">
					<field
            name="listing_img"
            type="media"
            label="TPL_LISTING_IMAGE_LABEL"
            description="TPL_LISTING_IMAGE_DESC"
          />

					<field
            name="listing_alt"
            type="text"
            label="TPL_LISTING_IMAGE_ALT_LABEL"
            description="TPL_LISTING_ALT_IMAGE_DESC"
          />				
				</form>
			</field>

			<!-- LOCATION SOCIAL -->
			<field
        name="spacer3"
        type="spacer"
        label="TPL_LISTING_SOCIAL_LABEL"
        class="text-label"
      />

			<field
        name="listing-social"
        type="subform"
        label="TPL_LISTING_OPTIONS"
        description="TPL_LISTING_OPTIONS_DESC"
        layout="joomla.form.field.subform.repeatable-table"
        icon="list"
        multiple="true"
        class="no-row"
      >
				<form hidden="true" name="list-social-listing" repeat="true">
					<field
            name="social_font"
            type="text"
            label="TPL_LISTING_SOCIAL_FONT_ICON_LABEL"
            description="TPL_LISTING_SOCIAL_FONT_ICON_DESC"
            hint="facebook"
          />

					<field
            name="social_link"
            type="text"
            label="TPL_LISTING_SOCIAL_LINK_LABEL"
            description="TPL_LISTING_SOCIAL_LINK_DESC"
            hint="http://facebook.com/joomlart"
          />

				</form>
			</field>

			<!-- LOCATION MENU -->
			<field
        name="spacer4"
        type="spacer"
        label="TPL_LISTING_MENU_LABEL"
        class="text-label"
      />

			<field
        name="menu-desc"
        type="textarea"
        label="TPL_LISTING_MENU_DESCRIPTIONS_LABEL"
        class="text-label"
        filter="raw"
      />

			<field
        name="listing-menu"
        type="subform"
        label="TPL_LISTING_OPTIONS"
        description="TPL_LISTING_OPTIONS_DESC"
        layout="joomla.form.field.subform.repeatable-table"
        icon="list"
        multiple="true"
        class="no-row"
      >
				<form hidden="true" name="list-menu-listing" repeat="true">
					<field
            name="menu_image"
            type="media"
            label="TPL_LISTING_MENU_IMAGE_LABEL"
            description="TPL_LISTING_MENU_IMAGE_DESC"
            hint="facebook"
          />

					<field
            name="menu_title"
            type="text"
            label="TPL_LISTING_MENU_TITLE_LABEL"
            description="TPL_LISTING_MENU_TITLE_DESC"
            hint="Beef cheek"
          />

					<field
            name="menu_desc"
            type="text"
            label="TPL_LISTING_MENU_DESC_LABEL"
            description="TPL_LISTING_MENU_DESC_DESC"
            hint="w/ brioche, hazelnuts, black vinegar laver"
          />

				</form>
			</field>

			<!-- LOCATION FAQ -->
			<field name="spacer4" type="spacer" label="TPL_FAQ_LABEL" class="text-label" />

			<field
        name="faq-title"
        type="textarea"
        label="TPL_LISTING_MENU_DESCRIPTIONS_LABEL"
        class="text-label"
        filter="raw"
      />

			<field
        name="listing-faq"
        type="subform"
        label="TPL_LISTING_OPTIONS"
        description="TPL_LISTING_OPTIONS_DESC"
        layout="joomla.form.field.subform.repeatable-table"
        icon="list"
        multiple="true"
        class="no-row"
      >
				<form hidden="true" name="list-faq-listing" repeat="true">
					<field
            name="faq_title"
            type="text"
            label="TPL_LISTING_FAQ_TITLE_LABEL"
            description="TPL_LISTING_FAQ_TITLE_DESC"
          />

					<field
            name="faq_content"
            type="text"
            label="TPL_LISTING_FAQ_CONTENT_LABEL"
            description="TPL_LISTING_FAQ_CONTENT_DESC"
          />
				</form>
			</field>
		</fieldset>
	</fields>
</form>

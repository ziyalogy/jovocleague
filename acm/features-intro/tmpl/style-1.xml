<?xml version="1.0" encoding="utf-8"?>
<form>
    <title>Features Intro Style 1</title>
	<sampledata></sampledata>
	<fields name="features-intro">
		<fieldset name="basic" label="FEATURES_BASIC_LABEL" description="FEATURES_BASIC_DESC">
			<field name="intro-img" type="media" default="" label="FEATURES_INTRO_MEDIA_LABEL" description="FEATURES_INTRO_MEDIA_DESC" />

			<field name="align-media" type="list" default="left" label="FEATURES_ALIGN_MEDIA_LABEL" description="FEATURES_ALIGN_MEDIA_DESC" >
				<option value="left">Left</option>
				<option value="right">Right</option>
			</field>

			<field name="info-title" type="textarea" default="" label="FEATURES_INFO_TITLE_LABEL" description="FEATURES_INFO_TITLE_DESC" />

			<field name="info-desc" type="textarea" default="" label="FEATURES_INFO_DESC_LABEL" description="FEATURES_INFO_DESC_DESC" />

			<field name="button1" type="text" default="" label="FEATURES_BUTTON_1" description="FEATURES_BUTTON_1_DES"/>
			<field name="btn-link1" type="text" default="" label="FEATURES_BUTTON_LINK_1" description="FEATURES_BUTTON_LINK_1_DES"/>	
			<field name="btn-type1" type="list" default="primary" label="FEATURES_BUTTON_TYPE_1" description="FEATURES_BUTTON_TYPE_1_DES">
				<option value="primary">Primary</option>
				<option value="secondary">Secondary</option>
				<option value="info">Info</option>
				<option value="success">Success</option>
			</field>	
			<field name="button2" type="text" default="" label="FEATURES_BUTTON_2" description="FEATURES_BUTTON_2_DES"/>
			<field name="btn-link2" type="text" default="" label="FEATURES_BUTTON_LINK_2" description="FEATURES_BUTTON_LINK_2_DES"/>	
			<field name="btn-type2" type="list" default="primary" label="FEATURES_BUTTON_TYPE_2" description="FEATURES_BUTTON_TYPE_2_DES">
				<option value="primary">Primary</option>
				<option value="secondary">Secondary</option>
				<option value="info">Info</option>
				<option value="success">Success</option>
			</field>	
		</fieldset>
  </fields>
</form>